<%- include('../includes/header.ejs') %>
    <link rel="stylesheet" href="assets/css/custom.css">

    </head>

    <body>
        <div class="loader"></div>
        <div id="app">
            <div class="main-wrapper main-wrapper-1">
                <%- include('../includes/sidebar_nav.ejs') %>
                    <!-- Main Content -->

                    <div class="main-content">
                        <section class="section">
                            <div class="section-body">
                               
                                <section class="h-100" style="background-color: #eee;">
                                    <div class="container h-100 py-5">
                                        <div class="row d-flex justify-content-center align-items-center h-100">
                                            <div class="col-10">
                                
                                                <div class="d-flex justify-content-between align-items-center mb-4">
                                                    <h3 class="fw-normal mb-0 text-black">Your Order</h3>
                                                  
                                                </div>
                                                <% if(orders) { %>
                                                    <% for(var o of orders) { %> 
                                                        <div class="card rounded-3 mb-4">
                                                            <div class="card-body p-4">
                                                                <div class="row d-flex justify-content-between align-items-center">
                                                                    <div class="col-md-2 col-lg-2 col-xl-2">
                                                                        <img src="<%=o.product.product_image%>"
                                                                            class="img-fluid rounded-3" alt="Cotton T-shirt">
                                                                    </div>
                                                                    <div class="col-md-3 col-lg-3 col-xl-3">
                                                                        <p class="lead fw-normal mb-2"><%=o.product.product_name%> </p>
                                                                        
                                                                    </div>
                                                                    <div class="col-md-3 col-lg-2 col-xl-2 offset-lg-1">
                                                                        <h5 class="mb-0"><%= p.price %> </h5>
                                                                    </div>
                                                                    <div class="col-md-1 col-lg-1 col-xl-1 text-end">
                                                                        <form action="" method="post">
                                                                            <input type="hidden" name="productId" value="<%= p._id %> ">
                                                                        <button type="submit"
                                                                        class="btn btn-icon icon-left btn-danger"
                                                                        onclick="javascript:form.action='/deletecartProduct'"><i
                                                                            class="fa fa-trash"></i></button>
                                                                        </form>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <% } }%>  
                                
                                               
                                
                                                <div class="card">
                                                    <div class="card-body">
                                                        <button type="button" class="btn btn-warning btn-block btn-lg">Proceed to Pay</button>
                                                    </div>
                                                </div>
                                
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>



                        </section>
                        <%- include('../includes/theme_converter.ejs') %>

                    </div>
                    <script src="assets/bundles/prism/prism.js"></script>

                    <%- include('../includes/footer.ejs') %>